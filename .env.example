# AI Ops Desk Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================================
# DATABASE
# ================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_ops_desk

# ================================================
# GOOGLE API CREDENTIALS
# ================================================
# Get these from Google Cloud Console:
# 1. Enable Gmail API and Calendar API
# 2. Create OAuth2 credentials
# 3. Generate refresh token
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token

# ================================================
# LLM PROVIDER (Choose one)
# ================================================
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ================================================
# TENANT CONFIGURATION
# ================================================
DEFAULT_TIMEZONE=Europe/London
WORKING_HOURS_START=9
WORKING_HOURS_END=17
WORKING_DAYS=0,1,2,3,4  # Monday=0, Sunday=6

# ================================================
# APPLICATION SETTINGS
# ================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Auto-send settings (use with caution)
AUTO_SEND_ENABLED=false
ESCALATION_THRESHOLD=0.7  # Confidence below this triggers escalation

# ================================================
# OPTIONAL: ADVANCED SETTINGS
# ================================================
# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# Sentry for error tracking (optional)
# SENTRY_DSN=https://...@sentry.io/...

# Knowledge base vector store (optional)
# VECTOR_STORE_URL=http://localhost:6333
# VECTOR_COLLECTION_NAME=ai_ops_desk_kb
